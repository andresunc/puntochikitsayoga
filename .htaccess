# Punto Chikitsa Yoga - Clean URLs Configuration
# Compatible con Apache/Hostinger

# Activar motor de reescritura
RewriteEngine On

# Forzar HTTPS (recomendado para seguridad)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Forzar WWW o non-WWW (descomentar según prefieras)
# Para forzar www:
# RewriteCond %{HTTP_HOST} !^www\. [NC]
# RewriteRule ^(.*)$ https://www.%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
# Para forzar non-www:
# RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
# RewriteRule ^(.*)$ https://%1%{REQUEST_URI} [L,R=301]

# Remover extensión .html de la URL visible
# Si alguien accede a /servicios.html, redirigir a /servicios
RewriteCond %{THE_REQUEST} ^GET\ /([^\ ]+)\.html
RewriteRule (.*)\.html$ /$1 [R=301,L]

# Reescribir internamente /servicios a servicios.html
# Esto permite que Apache sirva el archivo correcto
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.+)$ $1.html [L]

# Página de error 404 personalizada (opcional)
# ErrorDocument 404 /404.html

# Mejorar rendimiento con compresión (opcional)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript
</IfModule>

# Cache control para archivos estáticos (opcional)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
</IfModule>
